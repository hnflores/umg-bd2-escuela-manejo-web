@model List<User>
@{
    ViewData["Title"] = "Conductores";
}

<div class="page-content-wrapper-inner">
    <div class="viewport-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb has-arrow">
                <li class="breadcrumb-item"><a href="#">Colaboradores</a></li>
                <li class="breadcrumb-item active"><a href="#">Lista de Conductores</a></li>
            </ol>
        </nav>
    </div>
    <div class="content-viewport">
        <div class="row">
            <div class="col-lg-12">
                <div class="grid">
                    <div class="grid-body">
                        <div class="item-wrapper">
                            <div class="table-responsive">
                                <table id="dtDriver" class="data-table table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Apellido</th>
                                            <th>Correo</th>
                                            <th>Colonia</th>
                                            <th>Municipio</th>
                                            <th>Depatamento</th>
                                            <th>Estado</th>                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (User user in Model)
                                        {
                                            <tr>
                                                <td>@user.Nombre</td>                                                
                                                <td>@user.Apellido</td>
                                                <td>@user.Correo</td>
                                                <td>@user.Colonia</td>
                                                <td>@user.Municipio</td>
                                                <td>@user.Departamento</td>

                                                @switch (user.Estado)
                                                {
                                                    case "A":
                                                        <td>Activo</td>
                                                        break;
                                                    case "I":
                                                        <td>Inactivo</td>
                                                        break;
                                                    case "O":
                                                        <td>Ocupado</td>
                                                        break;
                                                    default:
                                                        <td>Desconocido</td>
                                                        break;
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        initDT("dtDriver");
    </script>
}
