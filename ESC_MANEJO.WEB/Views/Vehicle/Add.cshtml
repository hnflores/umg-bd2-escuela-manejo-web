@{
    ViewData["Title"] = "Agregar Vehiculo";
}


<div class="page-content-wrapper-inner">
    <div class="viewport-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb has-arrow">
                <li class="breadcrumb-item"><a asp-action="">Vehiculos</a></li>
                <li class="breadcrumb-item active"><a href="#">Agregar Vehiculos</a></li>
            </ol>
        </nav>
    </div>
    <div class="content-viewport">
        <div class="row">
            <div class="col-lg-12">
                <div class="grid">
                    <div class="grid-body">
                        <div class="item-wrapper">
                            <form asp-antiforgery="true" method="post" class="needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Placa</label>
                                        <input id="placa" type="text" class="form-control" maxlength="10" required autofocus />
                                        <div class="invalid-feedback">
                                            El campo es obligatorio
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Marca</label>
                                        <input id="marca" type="text" class="form-control" maxlength="20" required />
                                        <div class="invalid-feedback">
                                            El campo es obligatorio
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Modelo</label>
                                        <input id="modelo" type="text" class="form-control" maxlength="20" required />
                                        <div class="invalid-feedback">
                                            El campo es obligatorio
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Año</label>
                                        <input id="anio" type="number" class="form-control" maxlength="4" required />
                                        <div class="invalid-feedback">
                                            El campo es obligatorio
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Fecha de Compra</label>
                                        <input id="fecha-compra" type="date" class="form-control" required />
                                        <div class="invalid-feedback">
                                            El campo es obligatorio
                                        </div>
                                    </div>

                                </div>
                                <div class="text-center mt-5">
                                    <button id="btnAdd" type="submit" class="btn btn-primary">
                                        <div class="btn-load" style="display:none">
                                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                            Procesando...
                                        </div>
                                        <div class="btn-visible">
                                            Agregar Vehiculo
                                        </div>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/vehicle/_add.js" asp-append-version="true"></script>
}