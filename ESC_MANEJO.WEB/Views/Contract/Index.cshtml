@model List<Contract>
@{
    ViewData["Title"] = "Contratos";
}

<div class="page-content-wrapper-inner">
    <div class="viewport-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb has-arrow">
                <li class="breadcrumb-item"><a href="#">Contratos</a></li>
                <li class="breadcrumb-item active"><a href="#">Lista de Contratos</a></li>
            </ol>
        </nav>
    </div>
    <div class="content-viewport">
        <div class="row">
            <div class="col-lg-12">
                <div class="grid">
                    <div class="grid-body">
                        <div class="text-right mb-5">
                            <a asp-action="Add" class="btn btn-primary">Agregar Contrato &nbsp; <i class="mdi mdi-plus-circle link-icon"></i></a>
                        </div>
                        <div class="item-wrapper">
                            <div class="table-responsive">
                                <table id="dtContracts" class="data-table table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Contrado Id</th>
                                            <th>Fecha Inicio</th>
                                            <th>Fecha Fin</th>
                                            <th>Numero de sesiones</th>
                                            <th>Costo Total</th>
                                            <th>Conductor</th>
                                            <th>Cliente</th>
                                            <th>Vehiculo</th>
                                            <th>Estado</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Contract contract in Model)
                                        {
                                            <tr>
                                                <td>@contract.ContractId</td>
                                                <td>@contract.FechaInicio.ToString("dd/MM/yyyy")</td>
                                                <td>@contract.FechaFin.ToString("dd/MM/yyyy")</td>
                                                <td>@contract.NumeroSesiones</td>
                                                <td>@contract.Costo.ToString("N2")</td>
                                                <td>@contract.Conductor</td>
                                                <td>@contract.Cliente</td>
                                                <td>@contract.Vehiculo</td>

                                                @switch (contract.Estado)
                                                {
                                                    case "A":
                                                        <td>Activo</td>
                                                        break;
                                                    case "I":
                                                        <td>Inactivo</td>
                                                        break;
                                                    case "O":
                                                        <td>Ocupado</td>
                                                        break;
                                                    default:
                                                        <td>Desconocido</td>
                                                        break;
                                                }

                                            <td>
                                                <div class="btn-group">
                                                    <a href="javascript:void(0);" onclick="Edit(@contract.ContractId)" class="btn btn-sm btn-warning mr-2"><i class="mdi mdi-circle-edit-outline link-icon"></i></a>
                                                    <a href="javascript:void(0);" onclick="Delete(@contract.ContractId)" class="btn btn-sm btn-danger"><i class="mdi mdi-delete link-icon"></i></a>
                                                </div>
                                            </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/contract/_index.js" asp-append-version="true"></script>
}
