@{ Layout = null; }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Escuela de Manejo | Login</title>
    <link href="~/libs/material-icons/css/materialdesignicons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/vendor.addons.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/theme.css">

    <link href="~/libs/iziToast/iziToast.min.css" rel="stylesheet" />
</head>

<body>
    <div class="authentication-theme auth-style_2">
        <div class="row inner-wrapper">
            <div class="col-md-7 banner-section">
                <div class="auth_footer">
                    <p class="text-muted text-center">Escuela de Manejo</p>
                </div>
            </div>
            <div class="col-md-5 form-section">
                <div class="logo-section">
                    <a href="#" class="logo">
                        <img src="~/images/logo.svg" alt="logo">
                    </a>
                </div>
                <form method="POST" asp-antiforgery="true" class="needs-validation" novalidate>
                    <div class="form-group input-rounded">
                        <input id="user" type="email" class="form-control" placeholder="Usuario" required>
                    </div>
                    <div class="form-group input-rounded">
                        <input id="current-password" type="password" class="form-control" placeholder="Contraseña" required>
                    </div>
                    <div class="form-inline">

                    </div>
                    <button id="btnLogin" type="submit" class="btn btn-primary btn-block">
                        <div class="btn-load" style="display:none">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            Procesando...
                        </div>
                        <div class="btn-visible">
                            Ingresar
                        </div>

                    </button>
                </form>

            </div>
        </div>
    </div>



    <script src="~/js/core.js"></script>
    <script src="~/js/vendor.addons.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/libs/iziToast/iziToast.min.js"></script>

    <script src="~/js/pages/_core.js" asp-append-version="true"></script>
    <script src="~/js/pages/_login.js" asp-append-version="true"></script>
</body>

</html>



